<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="account_move_form_my_edit" model="ir.ui.view">
        <field name="name">account_move_form_my_edit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <page name="other_info" position="after">
                <page name="stock_valuation" string="Stock Valuation">

                    <!-- عرض السجلات المرتبطة فعليًا -->
                    <field name="stock_valuation_ids" readonly="1" force_save="1">
                        <tree>
                            <field name="product_id" />
                            <field name="quantity" />
                            <field name="value" />
                        </tree>
                    </field>

                    <!-- اختيار من الموجود وربطه تلقائي -->
                    <field name="stock_valuation_select_ids"
                        options="{'no_create': True}" />

                </page>
            </page>
        </field>
    </record>

</odoo>